<div class="mt-4">
  <h3>Create Khoa Hoc</h3>

  <form method="POST" action="/courses/store">
    <div class="form-group">
      <label for="name">Name</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        placeholder="Enter description"
      />
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <input
        type="text"
        class="form-control"
        id="description"
        name="description"
        placeholder="Enter description"
      />
    </div>
    <div class="form-group">
      <label for="videoId">VideoId</label>
      <input
        type="text"
        class="form-control"
        id="videoId"
        name="videoId"
        placeholder="Enter description"
      />
    </div>
    <div class="form-group">
      <label for="lever">Lever</label>
      <input
        type="text"
        class="form-control"
        id="lever"
        name="lever"
        placeholder="Enter description"
      />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>