<div class="mt-4">
  <h3>Edit Khoa Hoc</h3>

  <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
    <div class="form-group">
      <label for="name">Name</label>
      <input
        type="text"
        class="form-control"
        value="{{course.name}}"
        id="name"
        name="name"
        placeholder="Enter description"
      />
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea
        type="text"
        class="form-control"
        id="description"
        name="description"
        placeholder="Enter description"
      >{{course.description}}</textarea>
    </div>
    <div class="form-group">
      <label for="videoId">VideoId</label>
      <input
        type="text"
        class="form-control"
        value="{{course.videoId}}"
        id="videoId"
        name="videoId"
        placeholder="Enter description"
      />
    </div>
    <div class="form-group">
      <label for="lever">Lever</label>
      <input
        type="text"
        class="form-control"
        value="{{course.lever}}"
        id="lever"
        name="lever"
        placeholder="Enter description"
      />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
  </form>
</div>